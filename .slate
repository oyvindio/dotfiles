config defaultToCurrentScreen tru
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Push Bindings
bind l:ctrl;shift;cmd   push right bar-resize:screenSizeX/2
bind h:ctrl;shift;cmd   push left  bar-resize:screenSizeX/2
bind k:ctrl;shift;cmd   push up    bar-resize:screenSizeY/2
bind j:ctrl;shift;cmd   push down  bar-resize:screenSizeY/2

bind m:ctrl;shift;cmd   corner top-left resize:screenSizeX;screenSizeY
bind c:ctrl;shift;cmd   corner top-left resize:screenSizeX*.65;screenSizeY

bind y:ctrl;shift;cmd   move windowTopLeftX;0 windowSizeX;screenSizeY
bind x:ctrl;shift;cmd   move windowTopLeftX;windowTopLeftY screenSizeX;windowSizeY

# Throw Bindings
bind right:ctrl;shift;cmd;alt throw right resize
bind left:ctrl;shift;cmd;alt  throw left  resize
bind up:ctrl;shift;cmd;alt    throw up    resize
bind down:ctrl;shift;cmd;alt  throw down  resize

# Focus Bindings
bind f:ctrl;shift;cmd focus behind

# Window Hints
bind backslash:ctrl;shift;cmd;alt hint ASDFGHJKL
