[user]
	name = Øyvind Øvergaard
	email = oyvind.overgaard@gmail.com
[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[alias]
	ci = commit
	st = status -sb
	br = branch
	co = checkout
	df = diff
	lg = log --pretty=format:'%C(blue)%h%C(reset) -%C(magenta)%d%C(reset) %s %C(cyan)(%cr)%C(reset)' --abbrev-commit --date=relative
	who = shortlog -s --
	unstage = reset HEAD
	ap = add --patch
	dfst = diff --stat -r
	pr = !bash -ic 'git-pull-rebase \"$@\"' -
        conflicted = diff --name-only --diff-filter=U
        recent-branches = for-each-ref --count=30 --sort=-committerdate refs/heads/ --format='%(refname:short)'
[pack]
	threads = 0
[core]
	autocrlf = input
	excludesfile = ~/.gitignore_global
[push]
	default = upstream
[url "https://github.com/"]
     insteadOf = "gh:"
