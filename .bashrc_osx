#!/bin/bash

# bash completion
if [ -f /usr/local/etc/bash_completion.d/git-completion.bash ]; then
  . /usr/local/etc/bash_completion.d/git-completion.bash;
fi

export PATH=$PATH:/usr/local/Cellar/python/2.7/bin
export PYMACS_PYTHON=/usr/local/bin/python2.7
export PYMACS_EMACS=/Applications/Emacs.app/Contents/MacOS/Emacs

# Aliases
# use Emacs.app, not the ancient built-in emacs
alias emacs='/Applications/Emacs.app/Contents/MacOS/Emacs'
alias emacsclient='/Applications/Emacs.app/Contents/MacOS/bin/emacsclient'
alias ls='ls -G' # add colors (bsd ls)

# Functions
# open man page in Preview
function pman () {
    man -t "$@" | open -g -f -a /Applications/Preview.app
}
